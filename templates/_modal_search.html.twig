<div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade justify-content-center" id="card{{ card.id }}"
     role="dialog"
     tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="row justify-content-center">
                <div class=" offset-md-6 col-6 mb-3">
                    {% if (app.user.roles is defined) %}
                        {% if ( "/searchpage/" in app.request.getPathInfo ) %}
                            {% include('_addTo.html.twig') %}
                        {% else %}
                            {% include('_addTo_deck.html.twig') %}
                        {% endif %}
                    {% endif %}
                </div>
            </div>
                <div class="col">
                    <img class="img" src="{{ card.image_uris.png }}" alt="{{ card.name }}">
                </div>
            </div>
    </div>
</div>