<form method="post" action="{{ path('deck_delete', {'id': deck.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer ce deck?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ deck.id) }}">
    <button class="btn"><i class="fas fa-times text-danger"></i></button>
</form>
